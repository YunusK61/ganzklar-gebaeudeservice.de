---
import { Button, FormInput, FormSelect, FormTextarea } from '@littlesticks/odyssey-theme-components';

const selectOptions = [
  "Google Suche",
  "Social Media",
  "Email",
  "Sonstige",
]

---

<form name="Contact Form" method="POST" action="/contact-thank-you">
  <FormInput type="text" label="Name" name="Name" placeholder="John Doe" />
  <FormInput type="email" label="E-mail" name="E-mail" placeholder="hello@example.de" />
  <FormSelect label="Wie sind Sie auf uns Aufmerksam geworden?" options={selectOptions} />
  <FormTextarea label="Nachricht" name="Nachricht" placeholder="Ihre Nachricht ... " />
  <Button>Senden</Button>
</form>

<style>
  form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
</style>